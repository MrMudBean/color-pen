{
  "name": "color-pen",
  "type": "module",
  "private": true,
  "version": "3.0.0",
  "scripts": {
    "b": "rollup --config rollup.config.js && tsc -p tsconfig.types.json",
    "clean:package": "node scripts/clean-package-json.js",
    "build": "jja rm dist && pnpm run b && pnpm run clean:package",
    "dev": "jja cls rm .eg && rollup --config rollup.eg.config.js && node .eg/index.mjs",
    "diff": "jja pkg --diff",
    "eslint": "jja cls && eslint src",
    "beautify": "pnpm run eslint && pnpm run prettier",
    "prettier": "jja cls && prettier . --write",
    "test": "pnpm run dev",
    "report": "cat ./coverage/lcov.info | coveralls",
    "coverage": "codecov",
    "preview": "node example/index.js",
    "push:version": "gvv",
    "push": "gvv",
    "vjj": "vjj -b",
    "prepublishOnly": "pjj"
  },
  "dependencies": {
    "@color-pen/static": "^1.1.1",
    "a-js-tools": "^2.0.1",
    "a-type-of-js": "^2.0.0"
  }
}